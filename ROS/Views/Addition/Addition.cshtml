@model List<ROS.Models.Addition>
@{
    ViewBag.Title = "Addition";
}


<div class="content-wrapper">
    <h2>Additions</h2>
   
    <div class="row">
    @foreach (var item in Model)
    {
        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 grid-margin stretch-card ">
            <div class="card card-statistics">
                <div class="card-header bg-github">
                    <h4 class="mb-0 text-white"> @item.TableName</h4>
                </div>
                <div class="card-body">
                    <div class="clearfix">
                        <div class="float-left">
                            <i class="mdi mdi-receipt text-warning icon-lg"></i>
                        </div>
                        <div class="float-right">
                            <h5 class="mb-0 text-left">@item.CustomerName</h5>
                            <p class="mb-0 text-left">Total Revenue</p>
                            <div class="fluid-container">
                                <h3 class="font-weight-medium text-left mb-0">@item.Total €</h3>
                            </div>
                        </div>
                    </div>
                    <div class="text-right mt-2">
                        <button type="button" class="btn btn-success btn-icons btn-rounded" value="Print">
                            <i class="mdi mdi-printer"></i>
                        </button>
                        @*<button type="button" class="btn btn-icons btn-rounded btn-danger " value="Print">
                            <i class="mdi mdi-file-document"></i>
                        </button>*@
                    </div>
                </div>
            </div>
        </div>
    }
    </div>
</div>